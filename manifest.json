{
  "manifest_version": 3,

  "name": "cowify",
  "description": "This extension replaces images on a website with a cow photo.",
  "version": "1.1",
  "author": "jbrownrs",
  "background" : {
    "scripts": ["background.js"],
    "service_worker": "background.js"
  },
  "icons": {
    "48": "cow_icon.png"
  },
  "action": {
    "default_title": "Cowify",
    "default_icon": {
      "19":"cow_icon.png",
      "20":"cow_icon.png",
      "38":"cow_icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ]
}
